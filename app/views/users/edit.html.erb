<h3>スケジュール編集</h3>

<%= form_for @user do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title  %></td>
    </tr>
    <tr>
      <th><%= f.label :start ,"開始日" %></th>
      <td><%= f.date_field :start %></td>
    </tr>
    <tr>
      <th><%= f.label :finish ,"終了日" %></th>
      <td><%= f.date_field :finish  %></td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= f.submit "編集を完了する" %></li>
      <li><%= link_to "スケジュール管理一覧に戻る", :users %></li>
    </ul>
  </div>
<% end %>